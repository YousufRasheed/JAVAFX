   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="516.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" layoutX="144.0" layoutY="41.0" prefHeight="21.0" prefWidth="337.0" style="&#10;" text="Add Computers" textAlignment="CENTER" textFill="#9f9f9f" wrapText="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button id="closeButton" fx:id="closeButton" layoutX="188.0" layoutY="450.0" mnemonicParsing="false" onAction="#closeButtonClicked" prefHeight="30.0" prefWidth="250.0" text="Done" />

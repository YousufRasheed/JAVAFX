               <children>
                  <TextField id="systemIDField" fx:id="systemIDField" layoutX="21.0" layoutY="21.0" prefHeight="40.0" prefWidth="250.0" promptText="System ID" />
                  <TextField id="systemNameField" fx:id="systemNameField" prefHeight="40.0" prefWidth="200.0" promptText="System Name" />
                  <TextField id="systemSpeedField" fx:id="systemSpeedField" layoutX="21.0" layoutY="71.0" prefHeight="40.0" prefWidth="566.0" promptText="System Speed" />
